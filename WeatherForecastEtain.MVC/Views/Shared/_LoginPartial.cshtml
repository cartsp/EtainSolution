<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            @Html.ActionLink("Log Off", "Logout", "Account", null, new { @class = "nav-link text-dark" })
        </li>
    }
    else
    {
        <li class="nav-item">
            @Html.ActionLink("Log In", "Login", "Account", null, new { @class = "nav-link text-dark" })
        </li>
    }
</ul>
