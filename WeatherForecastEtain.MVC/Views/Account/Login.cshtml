@model LoginModel
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <div class="wrapper fadeInDown">
        <div id="formContent">
            <article class="card-body">
                <h4 class="card-title text-center mb-4 mt-1">Sign in</h4>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="alert alert-info" role="alert">
                        <strong>Username:</strong> user <strong>Password:</strong> user
                    </div>
                    <div class="alert alert-info" role="alert">
                        <strong>Username:</strong> admin <strong>Password:</strong> admin
                    </div>
                    <hr>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input class="fadeIn second form-control" placeholder="Username" asp-for="Username" /><br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input class="fadeIn third form-control" asp-for="Password" placeholder="******" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Login  </button>
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </article>
        </div>
    </div>
